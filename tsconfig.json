{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2017", "esnext.asynciterable", "dom" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./build/",
        "rootDir": "./src/",
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    },
    "include": [
        "src"
    ]
}
